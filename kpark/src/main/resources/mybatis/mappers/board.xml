  <select id="selectNewArticleNO" resultType="int"  >
		<![CDATA[
			SELECT  nvl(max(articleNO), 0) + 1 from k_board		
		]]>
	</select>
	
  <select id="selectArticle" resultType="articleVO"   parameterType="int">
    <![CDATA[
      SELECT * from k_board
      where articleNO = #{articleNO}		
    ]]>
  </select>
  
  <update id="updateArticle"  parameterType="java.util.Map">
			update k_board
			set title=#{title},	 
			content=#{content}
			 <if test="imageFileName!='' and imageFileName!=null">
			  , imageFileName=#{imageFileName}
			</if>
			where articleNO=#{articleNO}
	</update>
	
	<delete id="deleteArticle"  parameterType="int">
    <![CDATA[
      delete from k_board
      where articleNO in (
         SELECT articleNO FROM  k_board
         START WITH articleNO = #{articleNO}
         CONNECT BY PRIOR  articleNO = parentNO )
    ]]>      
  </delete>

 <!--다중 이미지 추가 SQL문 -->   
    <insert id="insertNewArticle"  parameterType="java.util.Map">
    <![CDATA[
      insert into k_board(articleNO, id, title, content, imageFileName)
      values(#{articleNO}, #{id}, #{title}, #{content}, null)
    ]]>      
  </insert>
 
   <insert id="insertNewImage"  parameterType="java.util.Map">
    <foreach item="item"  collection="list"   open="INSERT ALL" 
                  separator=" " close="SELECT * FROM DUAL" >
      INTO k_imageFile(imageFileNO, imageFileName, regDate articleNO)
      VALUES (#{item.imageFileNO}, #{item.imageFileName}, sysdate #{item.articleNO})
    </foreach>
  </insert>

 
  <select id="selectNewImageFileNO" resultType="int"  >
    <![CDATA[
      SELECT  nvl(max(imageFileNO),0) from k_imageFile		
    ]]>
  </select>
	

  <select  id="selectImageFileList" resultMap="imgResult" parameterType="int">
    <![CDATA[
      SELECT * from k_imageFile
      where articleNO=#{articleNO}	
    ]]>
  </select> 
  
</mapper>